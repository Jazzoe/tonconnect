{
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.rulers": [80],
  "files.exclude": {
    "**/.git": true,
    "**/vendor": true,
    "**/go.sum": true
  },
  "go.lintTool": "golangci-lint",
  "go.lintFlags": ["--fast"],
  "gopls": {
    "build.buildFlags": ["-tags=tools"]
  }
}
