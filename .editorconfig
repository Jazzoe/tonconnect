# Этот файл предназначен для унификации стиля кода в различных редакторах и IDE.
# Подробней на https://editorconfig.org
root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
max_line_length = 80
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.go]
indent_size = 4
indent_style = tab

[*.md]
trim_trailing_whitespace = false